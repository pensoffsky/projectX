<mvc:View
	controllerName="projectX.view.GitHubDialog.GitHubDialog"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:c="sap.ui.core"
	xmlns="sap.m"
	height="100%">
	<Page
		showHeader="false"
		>
		<l:Grid
			defaultSpan="L12 M12 S12"
			width="auto">
			<l:content>
				<f:SimpleForm
					minWidth="800"
					maxContainerCols="2"
					editable="true"
					layout="ResponsiveGridLayout"
					labelSpanL="3"
					labelSpanM="3"
					emptySpanL="1"
					emptySpanM="1"
					columnsL="1"
					columnsM="1"
					>
					<f:content>
						<Label text="{i18n>GitHubUser}"/>
						<Input id="gitHubUser" value="{localUIModel>/project/mProperties/githubUser}" placeholder="{i18n>GitHubUserPlaceHolder}" enabled="{localUIModel>/project/mProperties/useGithub}"/>
						<Label text="{i18n>GitHubPassword}"/>
						<Input id="gitHubPassword" value="{localUIModel>/project/mProperties/githubPassword}" type="Password" placeholder="{i18n>GitHubPasswordPlaceHolder}" enabled="{localUIModel>/project/mProperties/useGithub}"/>
					</f:content>
				</f:SimpleForm>
			</l:content>
		</l:Grid>
	</Page>
</mvc:View>